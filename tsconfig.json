{
  "compilerOptions": {
    "target": "ES2023", // Specify ECMAScript target version as the latest (ES2023)
    "lib": ["dom", "dom.iterable", "esnext"], // Specify the lib files to include in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of all declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit outputs
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Set the module system to use ES6 modules
    "moduleResolution": "node", // Use Node.js style resolution
    "resolveJsonModule": true, // Enable importing .json files
    "isolatedModules": true, // Ensure that each file can be safely transpiled without relying on other imports
    "jsx": "preserve", // Preserve JSX in output
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next" // Use Next.js plugin
      }
    ],
    "paths": {
      "@/*": ["./*"] // Define path mapping
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"], // Specify the files to include
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
